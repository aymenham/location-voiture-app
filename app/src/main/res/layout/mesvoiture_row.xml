<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/voitureLimage"
                android:src="@drawable/exp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toyota Yaris"
                android:paddingTop="10dp"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/voitureLmarque"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date debut de location :"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:textColor="#ea1919"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16/03/2018"
                    android:paddingLeft="80dp"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textColor="#1d1b1b"
                    android:id="@+id/voitureLdateD"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date fin de location :"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:textColor="#ea1919"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16/03/2018"
                    android:paddingLeft="98dp"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textColor="#1d1b1b"
                    android:id="@+id/voitureLdateF"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Il vous reste  : 5 Jours"
                android:id="@+id/voitureLNbr"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>